{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "sourceMap": false,
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "checkJs": true,
    "allowJs": true,
    "strictNullChecks": true,
    "types": ["unplugin-vue-define-options"],
    "rootDir": ".",
    "moduleResolution": "node",
    "paths": {
      "@taue/*": ["packages/*"]
    }
  }
}